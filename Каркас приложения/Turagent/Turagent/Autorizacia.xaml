<Page x:Class="Turagent.Autorizacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Turagent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autorizacia">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="*" ></RowDefinition>
            
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center" FontSize="20">
                Авторитизация 
            </TextBlock>
            <TextBlock VerticalAlignment="Center">
                Login
            </TextBlock>
            <TextBox Name="Login" Width="100"></TextBox>
            <TextBlock VerticalAlignment="Center">
                Password
            </TextBlock>
            <TextBox Name="Password" Width="100">
            </TextBox>
            <Button Click="Enter" Width="100">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
